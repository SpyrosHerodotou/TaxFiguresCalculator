@model CustomerIndexViewModel
@{
    ViewData["Title"] = "FileUpload";
}

<div class="modal-dialog">
    <div class="modal-content">
        <form asp-controller="FileUpload" asp-action="UploadStreamingFile" enctype="multipart/form-data" id="BlobUploadForm" method="post" class="form-label-left" role="form">
            <div class="modal-footer">
                <div class="form-group">
                    <div class="input-group">
                        <label class="input-group-btn">
                            <span class="btn btn-primary">
                                Browse… <input type="file" style="display: none;" name="file" id="FileInput" multiple>
                            </span>
                        </label>
                        <input type="text" class="form-control" readonly="" id="BrowseInput">
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <button type="submit" value="Upload Streaming File" class="btn btn-default" id="UploadStreamingFile">Upload Streaming File</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<div>
    @Html.ActionLink("Back to Upload", "Index","Customer", new { customerId = Model.CustomerId}, new { @class = "btn btn-default" })
</div>
@section Scripts {
    <script type="text/javascript">
        $(document).on('change', ':file', function () {
            var input = $(this)
            var label = $('#BrowseInput').val(input.val().replace(/\\/g, '/').replace(/.*\//, ''));
        });
    </script>
}
